изо мсвцрт черпать
	фопен как открыть некого типа,
	фреад как читать,
	фцлосе как закрыть некого,
	реьинд как ре некого,
	фсеек как искать некого,
	фтелл как сказать некого типа,
	принтф как гойда некого,
	маллоц как маллок типа,
	фьрите как запись;

слава Ярило прочесть (
	пусть файл будет зов открыть "ch.txt" "r";
	
	зов искать файл 0 2;
	пусть размер будет зов сказать файл;
	зов ре файл;

	зов гойда ф"%ллд\н" размер;
	пусть текст будет зов маллок размер + 1;
	зов читать текст 1 размер файл;
	пусть текст + размер + 1 бысть 0:байт;

	зов гойда ф"%с\н" текст;
	зов закрыть файл;
)
слава Перуну записать текст длина (
	пусть файл будет зов открыть "ch.txt" "a";
	зов запись текст 1 длина файл;
	зов закрыть файл;
)

зов прочесть;
зов записать "гойда" 10;
зов прочесть;